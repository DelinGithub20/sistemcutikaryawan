@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Selamat Datang di Sistem Cuti Karyawan</h1>
        <p class="text-muted">Kelola pengajuan cuti karyawan dengan lebih mudah, cepat, dan terorganisir.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Manajemen Karyawan</h5>
                    <p class="text-muted">Simpan data karyawan dan kelola pengajuan cuti mereka dengan praktis.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Pengajuan Cuti</h5>
                    <p class="text-muted">Ajukan dan pantau status cuti secara real-time tanpa ribet.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check display-4 text-warning mb-3"></i>
                    <h5 class="fw-bold">Kebijakan Perusahaan</h5>
                    <p class="text-muted">Ikuti aturan perusahaan terkait cuti sesuai kebijakan yang berlaku.</p>
                </div>
            </div>
        </div>
    </div>
</div>
