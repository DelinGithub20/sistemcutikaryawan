@model sistemcutikaryawan.Models.Cuti

<div class="container mt-4">
    <div class="card card-custom p-4">
        <h2 class="mb-4 text-danger">⚠️ Hapus Pengajuan Cuti</h2>

        <p>Apakah kamu yakin ingin menghapus data ini?</p>

        <dl class="row">
            <dt class="col-sm-3">Nama Karyawan</dt>
            <dd class="col-sm-9">@Model.NamaKaryawan</dd>

            <dt class="col-sm-3">Tanggal Mulai</dt>
            <dd class="col-sm-9">@Model.TanggalMulai.ToShortDateString()</dd>

            <dt class="col-sm-3">Tanggal Selesai</dt>
            <dd class="col-sm-9">@Model.TanggalSelesai.ToShortDateString()</dd>

            <dt class="col-sm-3">Alasan</dt>
            <dd class="col-sm-9">@Model.Alasan</dd>
        </dl>

        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-custom">Ya, Hapus</button>
            <a asp-action="Index" class="btn btn-secondary btn-custom">Batal</a>
        </form>
    </div>
</div>
