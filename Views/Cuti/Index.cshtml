@model IEnumerable<sistemcutikaryawan.Models.Cuti>

<div class="container mt-4">
    <div class="card card-custom p-4">
        <h1 class="mb-4">ðŸ“‹ Daftar Pengajuan Cuti</h1>

        <form asp-action="Index" method="get" class="d-flex mb-3">
            <input type="text" name="q" value="@ViewData["q"]" 
                   class="form-control me-2" placeholder="Cari nama karyawan...">
            <button type="submit" class="btn btn-primary btn-custom">Cari</button>
        </form>

        <a asp-action="Create" class="btn btn-success btn-custom mb-3">+ Tambah Cuti</a>

        <table class="table table-bordered table-hover table-custom">
            <thead>
                <tr>
                    <th>Nama Karyawan</th>
                    <th>Tanggal Mulai</th>
                    <th>Tanggal Selesai</th>
                    <th>Alasan</th>
                    <th>Status</th>   @* kolom baru *@
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NamaKaryawan</td>
                        <td>@item.TanggalMulai.ToShortDateString()</td>
                        <td>@item.TanggalSelesai.ToShortDateString()</td>
                        <td>@item.Alasan</td>
                        <td>
                            @if (item.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (item.Status == "Declined")
                            {
                                <span class="badge bg-danger">Declined</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pending</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-custom">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-custom">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-custom">Hapus</a>

                            @* Tombol approve & decline *@
                            <form asp-action="Approve" asp-route-id="@item.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form asp-action="Decline" asp-route-id="@item.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm">Decline</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
